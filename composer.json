{
  "name": "jprieton/jpwp-toolkit",
  "description": "JPWP Toolkit is an extensible object-oriented set of tools for WordPress that helps you to develop themes and plugins.",
  "homepage": "https://github.com/jprieton/jpwp-toolkit/",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.6|>=7.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "phpunit/phpunit": "7.*",
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*"
  },
  "config": {
    "platform": {
      "php": "7.1"
    },
    "preferred-install": {
    },
    "sort-packages": true
  },
  "autoload": {
    "exclude-from-classmap": [
      "includes/legacy",
      "includes/libraries"
    ],
    "psr-4": {
      "JPWPToolkit\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "sh ./bin/package-update.sh"
    ],
    "post-update-cmd": [
      "sh ./bin/package-update.sh"
    ],
    "test": [
      "phpunit"
    ],
    "phpcs": [
      "phpcs -s -p"
    ],
    "phpcs-pre-commit": [
      "phpcs -s -p -n"
    ],
    "phpcbf": [
      "phpcbf -p"
    ]
  },
  "extra": {
    "scripts-description": {
      "test": "Run unit tests",
      "phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
      "phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier"
    }
  }
}
